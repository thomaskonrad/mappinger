{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": false,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [ "node_modules" ]
}
